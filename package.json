  "description": "Portafolio personal de Pedro San Martín - Desarrollador Full Stack",
  "main": "index.html",
  "scripts": {
    "start": "http-server . -c-1 -p 8080",
    "lighthouse": "lighthouse http://127.0.0.1:8080 --output=html --output-path=./lighthouse-report.html --chrome-flags=\"--headless --no-sandbox\"",
    "lighthouse:ci": "lighthouse http://127.0.0.1:8080 --output=json --output-path=./lighthouse-report.json --chrome-flags=\"--headless --no-sandbox\" && lighthouse http://127.0.0.1:8080 --output=html --output-path=./lighthouse-report.html --chrome-flags=\"--headless --no-sandbox\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "portfolio",
